<mxfile host="app.diagrams.net">
  <diagram id="agentic-ai-arch" name="Agentic AI Architecture">
    <mxGraphModel
      dx="1200"
      dy="800"
      grid="1"
      gridSize="10"
      guides="1"
      tooltips="1"
      connect="1"
      arrows="1"
      fold="1"
      page="1"
      pageScale="1"
      pageWidth="850"
      pageHeight="1100"
      math="0"
      shadow="0">
      <root>
        <mxCell id="0"/>
        <mxCell id="1" parent="0"/>

        <!-- Agents -->
        <mxCell id="a1" value="Inventory Agent" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#e1d5e7" vertex="1" parent="1">
          <mxGeometry x="60" y="60" width="180" height="60" as="geometry"/>
        </mxCell>

        <mxCell id="a2" value="Demand Analysis Agent" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#e1d5e7" vertex="1" parent="1">
          <mxGeometry x="300" y="60" width="220" height="60" as="geometry"/>
        </mxCell>

        <mxCell id="a3" value="Procurement Agent" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#e1d5e7" vertex="1" parent="1">
          <mxGeometry x="60" y="160" width="180" height="60" as="geometry"/>
        </mxCell>

        <mxCell id="a4" value="Finance Agent" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#e1d5e7" vertex="1" parent="1">
          <mxGeometry x="300" y="160" width="220" height="60" as="geometry"/>
        </mxCell>

        <!-- Hub -->
        <mxCell id="hub" value="AutoGen Group Chat&#10;(Reasoning &amp; Coordination)"
                style="rounded=1;whiteSpace=wrap;html=1;fontStyle=1;fillColor=#dae8fc"
                vertex="1" parent="1">
          <mxGeometry x="180" y="260" width="280" height="80" as="geometry"/>
        </mxCell>

        <!-- Edges -->
        <mxCell id="h1" style="endArrow=block;html=1" edge="1" parent="1" source="a1" target="hub">
          <mxGeometry relative="1" as="geometry"/>
        </mxCell>

        <mxCell id="h2" style="endArrow=block;html=1" edge="1" parent="1" source="a2" target="hub">
          <mxGeometry relative="1" as="geometry"/>
        </mxCell>

        <mxCell id="h3" style="endArrow=block;html=1" edge="1" parent="1" source="a3" target="hub">
          <mxGeometry relative="1" as="geometry"/>
        </mxCell>

        <mxCell id="h4" style="endArrow=block;html=1" edge="1" parent="1" source="a4" target="hub">
          <mxGeometry relative="1" as="geometry"/>
        </mxCell>

      </root>
    </mxGraphModel>
  </diagram>
</mxfile>
